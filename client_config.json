{
    "application": {
        "name": "Cloud Honeypot Client",
        "version": "4.1.3",
        "author": "YesNext Technology"
    },
    "language": {
        "selected": "tr",
        "selected_by_user": true,
        "available_languages": [
            "tr",
            "en"
        ],
        "default": "tr"
    },
    "ui": {
        "window_width": 900,
        "window_height": 700,
        "theme": "dark",
        "show_loading_screen": true,
        "loading_timeout": 30
    },
    "admin": {
        "require_admin_privileges": true,
        "auto_restart_as_admin": false,
        "show_admin_dialog": true
    },
    "logging": {
        "level": "INFO",
        "max_file_size_mb": 10,
        "backup_count": 5,
        "debug_mode": false
    },
    "api": {
        "base_url": "https://honeypot.yesnext.com.tr/api",
        "timeout": 30,
        "retry_count": 3
    },
    "services": {
        "auto_start": false,
        "rdp_port": 53389,
        "honeypots": [
            {
                "port": 3389,
                "service": "RDP",
                "enabled": true
            },
            {
                "port": 1433,
                "service": "MSSQL",
                "enabled": false
            },
            {
                "port": 3306,
                "service": "MySQL",
                "enabled": false
            },
            {
                "port": 21,
                "service": "FTP",
                "enabled": false
            },
            {
                "port": 22,
                "service": "SSH",
                "enabled": true
            }
        ]
    },
    "updates": {
        "auto_check": true,
        "check_interval_hours": 24,
        "show_notifications": true
    },
    "advanced": {
        "startup_delay": 0,
        "minimize_to_tray": true,
        "auto_start_with_windows": false,
        "single_instance": true,
        "gui_health_monitoring": true,
        "gui_refresh_interval": 300,
        "prevent_gui_freeze": true,
        "windows_server_mode": true
    }
}